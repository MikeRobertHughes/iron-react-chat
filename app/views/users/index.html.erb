<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Username</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.username %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) if user == @current_user %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } if user == @current_user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p><%= link_to 'New User', new_user_path, class: "btn" unless user_logged_in? %>
<%= link_to 'Login', login_path, class: "btn" unless user_logged_in? %></p>
